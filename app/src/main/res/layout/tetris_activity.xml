<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightSchemeBackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".TetrisActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/score_display_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="@string/score_tv"
            android:textColor="@color/colorLightSchemeEmptyCell"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/score_display"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/score_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textColor="@color/colorLightSchemeEmptyCell"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/score_display_prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/best_score_prefix"
            style="@style/TextViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_score_prefix_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/best_score_display"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/best_score_display"
            style="@style/TextViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/new_game_button"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/new_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LightButtons"
            android:text="@string/new_game_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.tetris.TetrisFieldView
        android:id="@+id/tetrisField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/left_button"
            style="@style/LightButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@color/colorLightSchemeButtons"
            android:src="@drawable/ic_light_left"
            android:contentDescription="@string/content_description_image_button" />

        <ImageButton
            android:id="@+id/right_button"
            style="@style/LightButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@color/colorLightSchemeButtons"
            android:contentDescription="@string/content_description_image_button"
            android:src="@drawable/ic_light_right" />

        <Button
            android:id="@+id/speed_up_button"
            style="@style/LightButtons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/speed_up_button"
            />

        <ImageButton
            android:id="@+id/rotate_button"
            style="@style/LightButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@color/colorLightSchemeButtons"
            android:contentDescription="@string/content_description_image_button"
            android:src="@drawable/ic_rotate_light" />

    </LinearLayout>

</LinearLayout>