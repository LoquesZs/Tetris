<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightSchemeBackground"
    tools:context=".StartMenu">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/start_button"
            style="@style/LightButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorLightSchemeButtons"
            android:fontFamily="@font/rubik_mono_one"
            android:padding="20dp"
            android:text="@string/start_game_button" />

        <Button
            android:id="@+id/highscore"
            style="@style/LightButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorLightSchemeButtons"
            android:fontFamily="@font/rubik_mono_one"
            android:padding="20dp"
            android:text="@string/highscores_button" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LightButtons"
            android:background="@color/colorLightSchemeButtons"
            android:fontFamily="@font/rubik_mono_one"
            android:padding="20dp"
            android:text="@string/settings_button"
            />

        <Button
            android:id="@+id/quit_button"
            style="@style/LightButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorLightSchemeButtons"
            android:fontFamily="@font/rubik_mono_one"
            android:padding="20dp"
            android:text="@string/quit_button" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>